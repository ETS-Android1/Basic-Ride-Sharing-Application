<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kannan.carpool.dashFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/blue1"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:border_color="@color/colorPrimaryDark"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />



            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="?android:attr/ratingBarStyleIndicator"/>


            <TextView
             android:textStyle="bold"
                android:id="@+id/name"
             android:textAlignment="center"
             android:textColor="@color/colorPrimary"
             android:layout_width="match_parent"
             android:paddingTop="10dp"
                android:textSize="22sp"
             android:layout_height="50dp"

             />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingTop="15dp"
                />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="Age:"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingTop="15dp"
                android:text="Gender : "/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/carname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:text="Carname :"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:dividerHeight="2px"
                android:id="@+id/list1"
                />

            <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="60dp">

                <info.hoang8f.widget.FButton
                android:id="@+id/FButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="REQUEST"
                android:textColor="@color/colorWhite"
                fbutton:buttonColor="@color/colorPrimary"
                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="@color/colorPrimaryDark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                    android:layout_marginLeft="50dp"/>

               <info.hoang8f.widget.FButton

                   android:id="@+id/FButton1"
                   android:layout_width="100dp"
                   android:layout_height="50dp"
                   android:layout_gravity="left"
                   android:text="CANCEL"
                   android:textColor="@color/colorWhite"
                   fbutton:buttonColor="#ffe766"
                   fbutton:cornerRadius="5dp"
                   fbutton:shadowColor="@color/bootstrap_brand_warning"
                   fbutton:shadowEnabled="true"
                   fbutton:shadowHeight="5dp"
                   android:layout_marginRight="50dp"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentEnd="true"
                    />
           </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>
