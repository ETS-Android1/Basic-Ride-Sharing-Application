<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kannan.carpool.SettingsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/customborder"
            android:id="@+id/relativeLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <info.hoang8f.widget.FButton

                android:id="@+id/FButton1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="View Route"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                fbutton:buttonColor="#ffe766"
                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="@color/bootstrap_brand_warning"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/customborder"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:text="FARE"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </RelativeLayout>



    <ListView
        android:background="@drawable/customborder"
        android:layout_width="208dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="6dp"
        android:layout_height="400dp"
        android:id="@+id/listView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/cancel"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/colorWhite"
        fbutton:buttonColor="@color/colorPrimary"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/colorPrimaryDark"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/listView2"
        android:layout_alignParentEnd="true" />


</RelativeLayout>