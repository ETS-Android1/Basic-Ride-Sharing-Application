<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black5"
    tools:context="com.example.kannan.carpool.MainFragment">

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/ic_near_me_black_24dp"
        android:id="@+id/lay4"
        android:layout_below="@+id/lay5"
        android:layout_alignStart="@+id/lay5"
        android:layout_marginTop="40dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="To location"
            android:textSize="15sp"
            android:id="@+id/editText7"
            android:layout_centerHorizontal="true"
            />
    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/ic_near_me_black_24dp"
        android:id="@+id/lay5"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="From location"
            android:textSize="15sp"
            android:id="@+id/editText8"
            android:layout_centerHorizontal="true"
            />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="date"
        android:hint="date of journey"
        android:ems="10"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:id="@+id/editText5"
        android:layout_below="@+id/lay4"
        android:layout_alignEnd="@+id/lay4"
        android:layout_alignStart="@+id/lay4" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:hint="number of seats"
        android:ems="10"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_alignEnd="@+id/editText5" />


    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSearch"
        android:background="@color/colorWhite"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText6"
        android:layout_alignEnd="@+id/editText6" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:id="@+id/lay"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@+id/lay4"
        android:background="@color/colorWhite">

        <DatePicker
            android:id="@+id/datePicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
